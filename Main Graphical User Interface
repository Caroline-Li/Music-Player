    private void button_playMusicActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        // TODO add your handling code here:

        for (int i = 0; i < playList.size(); i++)
        {
        ps.run();

        }
            
        
        

        
      
       
    }                                                

    private void button_pauseMusicActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        // TODO add your handling code here:

        String song = getCurrentlyPlaying();
            songs.get(song).pause();
        try {
            ps.pause();
        } catch (InterruptedException ex) {
            Logger.getLogger(MainGUIMusic.class.getName()).log(Level.SEVERE, null, ex);
        }
       
        

        

    }                                                 

    private void button_resumeMusicActionPerformed(java.awt.event.ActionEvent evt) {                                                   
        // TODO add your handling code here:
        ps.resume();
        


    }                                                  
