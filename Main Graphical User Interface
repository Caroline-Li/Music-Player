    private TreeMap<String, MusicPlayer> songs;
    private Queue<MusicPlayer> playList;
    private PlaySongs ps;
    public MainGUIMusic() {
        initComponents();
        songs = new TreeMap();
        playList = new LinkedList();
        loadData();
        Set<String> names = songs.keySet();
        Iterator<String> iterator = names.iterator();
        for (int i = 0; i < names.size(); i++)
        {
            String songName = iterator.next();
            MusicPlayer player = songs.get(songName);
           
            playList.add(player);
            
        }
        ps = new PlaySongs((LinkedList<MusicPlayer>) playList);

        
    }

