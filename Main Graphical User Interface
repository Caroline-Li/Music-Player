    public void loadData()
    {
        try {
            Scanner reader = new Scanner(new File("songs.txt"));
            int amount = reader.nextInt();
            reader.nextLine();
            String songName;
            String fileName;
            for (int i = 0; i < amount; i++)
            {
                fileName = reader.nextLine();
                songName = reader.nextLine();
                MusicPlayer key = new MusicPlayer(songName, fileName);
                songs.put(songName, key);
            }
            System.out.println(songs);
        } catch (FileNotFoundException ex) {
            System.out.println("file Not Found");
        }
        updateTable();
        
    }
    public void updateTable()
    {
        String[][] data = new String[songs.size()][2];
        String[] columnNames = {"Song File", "Song Name"};
        
        Set<String> keys = songs.keySet();
        Iterator<String> iterator = keys.iterator();
        int index = 0;
        String fileName;
        String songName;
        while (iterator.hasNext())
        {
            songName = iterator.next();
            data[index][1] = songName;
            data[index][0] = songs.get(songName).getFileName();
            index++;
        }
        DefaultTableModel dfm = new DefaultTableModel(data, columnNames);
        table_songs.setModel(dfm);
        
        
    }
    public String getCurrentlyPlaying()
    {
        Set<String> keys = songs.keySet();
        Iterator<String> iterator = keys.iterator();
        String current = "";
        MusicPlayer test;
        String songName;
        for (int i = 0; i < keys.size(); i++)
        {
            songName = iterator.next();
            System.out.println(songName);
            test = songs.get(songName);
            if (test.isPlaying() && (playList.contains(test)))
            {
                current = songName;
                break;
            }
        }
        System.out.println(current);
        return current;
    }
    public String getCurrentlyPaused()
    {
        Set<String> keys = songs.keySet();
        Iterator<String> iterator = keys.iterator();
        String current = "";
        MusicPlayer test;
        String songName;
        for (int i = 0; i < keys.size(); i++)
        {
            songName = iterator.next();
            System.out.println(songName);
            test = songs.get(songName);
            if (test.isPaused() && !(playList.contains(test)))
            {
                current = songName;
                break;
            }
        }
        System.out.println(current);
        return current;
    }
    

    

